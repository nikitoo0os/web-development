          "price"
        ]
      },
      "NewShoeCare": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "format": "int64",
            "description": "The unique ID of the new shoe care"
          },
          "name": {
            "type": "string",
            "description": "The name of the new shoe care"
          },
          "brand": {
            "type": "string",
            "description": "The brand of the new shoe care"
          },
          "price": {
            "type": "number",
            "format": "float",
            "description": "The price of the new shoe care"
          }
        },
        "required": [
          "name",
          "brand",
          "price"
        ]
      },
      "UpdateShoeCare": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The updated name of the shoe care"
          },
          "brand": {
            "type": "string",
            "description": "The updated brand of the shoe care"
          },
          "price": {
